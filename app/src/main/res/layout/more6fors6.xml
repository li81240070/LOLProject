<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="#2f323a">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/more6BackButton"
            android:background="@mipmap/newsback"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:id="@+id/more6Title"
            android:text="天赋模拟"
            android:textColor="#ffffff"
            android:gravity="center"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/more6Changeaccount"
           android:text="方案"
            android:background="#FF434343"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:layout_margin="5dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:background="#FF434343">
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:hint="  为自己的天赋取个名字吧"
            android:background="#ffffff"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:textColor="#FF161616"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="可用点30"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:background="#FF434343"/>
    </LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:id="@+id/more6TabLayout"
        android:background="#2f323a"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.8"
        android:id="@+id/more6ViewPager"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:background="#2f323a">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="新增"
            android:background="#2f323a"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="重置"
            android:background="#2f323a"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
        <TextView
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="保存"
            android:background="#2f323a"
            android:textColor="#ffffff"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>