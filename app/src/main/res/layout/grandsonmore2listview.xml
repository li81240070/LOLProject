<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
   android:layout_height="wrap_content"
    android:background="#2f323a">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="LPL2016夏季赛"
            android:id="@+id/grandsonMore2MatchName"
            android:gravity="left"
            android:textColor="#ffffff"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="13:00"
            android:id="@+id/grandsonMore2MatchTime"
            android:gravity="right"
            android:textColor="#ffffff"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">
        <!--左边-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <!--第一个队伍的标志-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/grandsonMore2Team1Picture"/>
                <!--队伍一名字-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="SKT"
                    android:id="@+id/grandsonMore2Team1Name"
                    android:gravity="left"
                    android:textColor="#ffffff"/>
                <!--队伍一得分-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="3"
                    android:id="@+id/grandsonMore2Team1Score"
                    android:gravity="right"
                    android:textColor="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <!--第2个队伍的标志-->
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/grandsonMore2Team2Picture"/>
                <!--队伍2名字-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="SKT"
                    android:id="@+id/grandsonMore2Team2Name"
                    android:gravity="left"
                    android:textColor="#ffffff"/>
                <!--队伍2得分-->
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="3"
                    android:id="@+id/grandsonMore2Team2Score"
                    android:gravity="right"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="季中赛冠军淘汰赛,BO5"
                android:id="@+id/grandsonMore2MatchStyle"
                android:textColor="#ffffff"/>


        </LinearLayout>
        <!--右边-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <!--比赛状态-->
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="已结束"
                android:id="@+id/grandsonMore2state"
                android:gravity="center_horizontal"
                android:textColor="#ffffff"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"

                    />
                <!--评论-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="评论1358"
                    android:id="@+id/grandsonMore2Comment"
                    android:textColor="#ffffff"/>
            </LinearLayout>
            

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#2f323a"/>


</LinearLayout>